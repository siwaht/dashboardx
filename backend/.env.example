# ============================================
# Agentic RAG Platform - Backend Configuration
# ============================================

# -------------------- Supabase --------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
SUPABASE_DB_CONNECTION=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# -------------------- OpenAI --------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORGANIZATION_ID=org-your-org-id-here  # Optional

# Model Configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# -------------------- Anthropic (Optional) --------------------
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# -------------------- LangSmith (Optional - for observability) --------------------
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls__your-langsmith-key-here
LANGCHAIN_PROJECT=agentic-rag-platform
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# -------------------- CopilotKit --------------------
COPILOTKIT_API_KEY=your-copilotkit-api-key-here

# -------------------- Server Configuration --------------------
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true  # Set to false in production
BACKEND_WORKERS=1    # Increase in production

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# -------------------- RAG Configuration --------------------
# Chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50
CHUNKING_STRATEGY=recursive  # Options: recursive, semantic, sentence

# Retrieval
TOP_K_DOCUMENTS=5
SIMILARITY_THRESHOLD=0.7
ENABLE_RERANKING=true
RERANKING_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Embedding
EMBEDDING_BATCH_SIZE=100
EMBEDDING_DIMENSIONS=1536

# -------------------- Agent Configuration --------------------
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=120
ENABLE_QUERY_REWRITE=true
ENABLE_HYDE=false  # Hypothetical Document Embeddings

# -------------------- Security --------------------
# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# -------------------- Data Connectors --------------------
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Google Drive
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# SharePoint
SHAREPOINT_SITE_URL=https://your-tenant.sharepoint.com/sites/your-site
SHAREPOINT_CLIENT_ID=your-sharepoint-client-id
SHAREPOINT_CLIENT_SECRET=your-sharepoint-client-secret

# Confluence
CONFLUENCE_URL=https://your-domain.atlassian.net
CONFLUENCE_USERNAME=your-email@example.com
CONFLUENCE_API_TOKEN=your-confluence-api-token

# -------------------- Monitoring & Logging --------------------
# Sentry (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development  # Options: development, staging, production
SENTRY_TRACES_SAMPLE_RATE=1.0

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text

# -------------------- Feature Flags --------------------
ENABLE_STREAMING=true
ENABLE_CACHING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# -------------------- Cache Configuration --------------------
REDIS_URL=redis://localhost:6379/0  # Optional - for caching
CACHE_TTL_SECONDS=3600

# -------------------- Development --------------------
DEBUG=true  # Set to false in production
TESTING=false

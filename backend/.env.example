# ==================== Supabase Configuration ====================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
SUPABASE_DB_CONNECTION=postgresql://postgres:password@localhost:5432/postgres
SUPABASE_ANON_KEY=your-anon-key-here

# ==================== MongoDB Configuration ====================
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?appName=yourapp
MONGODB_DATABASE=dashboardx
MONGODB_COLLECTION=dashboardx

# ==================== JWT Configuration ====================
JWT_SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== OpenAI Configuration ====================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_CHAT_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ==================== Server Configuration ====================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true
BACKEND_WORKERS=1
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ==================== RAG Configuration ====================
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_DOCUMENTS=5
ENABLE_STREAMING=true

# ==================== Logging Configuration ====================
LOG_LEVEL=INFO
DEBUG=true
TESTING=false

# ==================== Monitoring (Optional) ====================
# Sentry Configuration
# SENTRY_DSN=your-sentry-dsn-here
# SENTRY_ENVIRONMENT=development
# SENTRY_TRACES_SAMPLE_RATE=1.0

# LangSmith Configuration (Optional)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your-langsmith-api-key-here
# LANGCHAIN_PROJECT=agentic-rag-platform

# ==================== Data Connectors (Optional) ====================
# AWS S3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1

# Google Drive
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# SharePoint
# SHAREPOINT_CLIENT_ID=your-sharepoint-client-id
# SHAREPOINT_CLIENT_SECRET=your-sharepoint-client-secret
# SHAREPOINT_TENANT_ID=your-tenant-id

# Confluence
# CONFLUENCE_URL=https://your-domain.atlassian.net
# CONFLUENCE_USERNAME=your-email@example.com
# CONFLUENCE_API_TOKEN=your-confluence-api-token
